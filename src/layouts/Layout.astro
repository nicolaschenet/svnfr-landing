---
import "../styles/global.css";

import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "SVNFR is a synthwave transmission from the aftermath.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#111111" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      referrerpolicy="no-referrer"
    />
    <script
      src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"
      is:inline></script>

    <!-- Hide navbar logo immediately -->
    <script is:inline>
      // This script runs immediately to hide the navbar logo before any rendering
      (function () {
        // Create a style element that hides the logo initially
        var style = document.createElement("style");
        style.textContent = ".logo-image { opacity: 0 !important; }";
        document.head.appendChild(style);

        // Also try with DOMContentLoaded for backup
        document.addEventListener("DOMContentLoaded", function () {
          const navbarLogo = document.querySelector(".logo-image");
          if (navbarLogo) {
            navbarLogo.style.setProperty("opacity", "0", "important");
            console.log("Navbar logo hidden by early script");
          }
        });
      })();
    </script>
  </head>
  <body>
    <slot />

    <script src="/scripts/particles-config.js" is:inline></script>
    <script src="/scripts/glitch-effect.js" is:inline></script>
    <script src="/scripts/nav.js" is:inline></script>
    <script src="/scripts/navbar-scroll.js" is:inline></script>
    <Analytics />
    <SpeedInsights />
  </body>
</html>
